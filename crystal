local Condition = true -- true turns it on, false turns it off
local counter = 1

while Condition do
  local crystal = game.workspace["MineSS"]:GetChildren()

  for k, v in pairs(crystal) do
      if v.Name == "SovereignTier" then
          v.Name = "Sov" .. counter
          counter = counter + 1
      end
  end

  for i = 1, 16 do
      local sovc = game.workspace["MineSS"]["Sov" .. i]
      game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = sovc.CFrame
      wait(0.3)
      local args = { sovc, "Mine 10" }
      game:GetService("ReplicatedStorage").Harvest.Harvest:FireServer(unpack(args))
      wait(2)
  end
end
