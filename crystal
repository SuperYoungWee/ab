local Condition = true -- true turns it on, false turns it off
local counter = 1

while Condition do
  local crystal = workspace.MineSS:GetChildren()

  for k, v in pairs(crystal) do
      if v.Name == "SovereignTier" then
          v.Name = "XiaoWhite" .. counter
          counter = counter + 1
      end
  end

  for i = 1, 16 do
      local Sov = workspace.MineSS["XiaoWhite" .. i]
      game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = Sov.CFrame
      wait(0.3)
      local args = {
      [1] = workspace.MineSS.SovereignTier,
      [2] = "Mine 10"
      }
      game:GetService("ReplicatedStorage").Harvest.Harvest:FireServer(unpack(args))
      wait(2.3)
  end
end
